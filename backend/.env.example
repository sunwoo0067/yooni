# Database
DATABASE_URL=postgresql://postgres:1234@localhost:5434/yoonni

# Redis
REDIS_URL=redis://localhost:6379

# API Keys (Coupang)
COUPANG_ACCESS_KEY=your_access_key
COUPANG_SECRET_KEY=your_secret_key
COUPANG_VENDOR_ID=your_vendor_id

# JWT
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_TO=admin@example.com

# MLflow
MLFLOW_TRACKING_URI=./mlruns
MLFLOW_ARTIFACT_ROOT=./mlartifacts

# Model Registry
MODEL_REGISTRY_PATH=./model_registry

# Chatbot
CHATBOT_API_URL=http://localhost:8003
CHATBOT_DB_URL=postgresql://postgres:1234@localhost:5434/yoonni

# Environment
ENVIRONMENT=development
DEBUG=True

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
SECRET_KEY=your_secret_key_here

# AI/ML Configuration
MAX_WORKERS=4
MODEL_CACHE_SIZE=1000
PREDICTION_TIMEOUT=30

# Monitoring
ENABLE_MONITORING=True
MONITORING_INTERVAL=300  # 5 minutes
ALERT_THRESHOLD_ACCURACY_DROP=0.1
ALERT_THRESHOLD_LATENCY_INCREASE=2.0
ALERT_THRESHOLD_ERROR_RATE=0.05
# Yooni E-commerce ERP System Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:1234@localhost:5434/yoonni
DATABASE_HOST=localhost
DATABASE_PORT=5434
DATABASE_NAME=yoonni
DATABASE_USER=postgres
DATABASE_PASSWORD=1234

# MLflow Database
MLFLOW_DATABASE_URL=postgresql://postgres:1234@localhost:5434/mlflow

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8003
WEBSOCKET_PORT=8002
MONITORING_PORT=8000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8003
NEXT_PUBLIC_WS_URL=ws://localhost:8002

# Coupang API Configuration
COUPANG_ACCESS_KEY=your_access_key_here
COUPANG_SECRET_KEY=your_secret_key_here
COUPANG_VENDOR_ID=your_vendor_id_here

# OwnerClan API Configuration
OWNERCLAN_API_URL=https://api.ownerclan.com/v1/graphql
OWNERCLAN_AUTH_URL=https://auth.ownerclan.com/auth
OWNERCLAN_ACCOUNT_ID=your_account_id_here
OWNERCLAN_ACCOUNT_PW=your_password_here

# ZenTrade API Configuration
ZENTRADE_API_KEY=your_api_key_here
ZENTRADE_API_SECRET=your_api_secret_here

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Environment
NODE_ENV=development
PYTHON_ENV=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# Scheduler Configuration
ENABLE_SCHEDULER=true
SCHEDULER_TIMEZONE=Asia/Seoul

# Feature Flags
ENABLE_ML_FEATURES=true
ENABLE_WEBSOCKET=true
ENABLE_MONITORING=true